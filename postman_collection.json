			"name": "0. Setup",
			"item": [
				{
					"name": "Seed Database",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"const jsonData = pm.response.json();",
									"if (jsonData.success !== false) {",
									"    pm.environment.set(\"event_id\", jsonData.data.event_id);",
									"    pm.environment.set(\"city_id\", jsonData.data.city_id);",
									"    pm.environment.set(\"category_id\", jsonData.data.category_id);",
									"    pm.environment.set(\"product_id\", jsonData.data.product_id);",
									"    pm.environment.set(\"complex_product_id\", jsonData.data.complex_product_id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/seed",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"seed"
							]
						}
					},
					"response": []
				}
			]
		},
